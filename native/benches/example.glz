.class
	span
		color: lightgray
	p
		color: gray
		b
			font-weight: 500
	div
		background-color: blue

color-weight(c, w)
	color: $c
	font-weight: $w

.class-2
	color-weight(blue, 600)
	p
		color-weight: #222 normal
		i
			color: gray
			& > a
				padding: 3px
				color-weight(lightblue, 500)
			div
				background: #123adf
				a
					border: 1px solid black
					background: purple
		strong
			color-weight: black 800

.class-3
	font-weight: bold
	color: #222
	flex-grow: 2
	border: 1px solid black
	&:after
		content: ""
		background: blue
	width: 50vw
	height: 100%
	padding: 5px 2px

.class-4
	$border = {
		width: 1
		colors: {
			dark: black
			medium: gray
			light: white
		}
	}

	border: {$border.width}px solid $border.colors.dark

.class-5
	$border = solid, 1, black, px
	$zero = 0

	border: {$border[1]}{$border[3]} $border[$zero] $border[2]
